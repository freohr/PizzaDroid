<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.pizzadroid" version="0.0.1" xmlns="http://www.w3.org/ns/widgets">
    <name>PizzaDroid</name>
    <description>
        An app to manage orders in a Pizzeria
    </description>
    <author email="faure.stephen@gmail.com">
        Stephen
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <!-- A wildcard can be used to whitelist the entire network,
     over HTTP and HTTPS.
     *NOT RECOMMENDED* -->
    <allow-navigation href="*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.0.0" />
</widget>
